{
  "name": "21",
  "version": "0.0.1",
  "description": "blackjack for dummies",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf build && mkdir build",
    "copy": "cp index.html build/ && cp node_modules/angular-socket-io/socket.js build/angular-socket-io.js",
    "build": "browserify -t browserify-shim src/index.js -o build/bundle.js -d",
    "build-dev": "nodemon -w src --exec npm run build",
    "server-dev": "nodemon -w controllers -w io.js -w app.js -w index.js index.js",
    "start": "npm run clean && npm run copy && npm run build && node .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "colthreepv",
  "license": "MIT",
  "dependencies": {
    "angular-socket-io": "^0.7.0",
    "chance": "^0.8.0",
    "debug": "^2.2.0",
    "electrolyte": "^0.1.0",
    "express": "^4.13.3",
    "serve-static": "^1.10.0",
    "shortid": "^2.2.4",
    "socket.io": "^1.3.7"
  },
  "devDependencies": {
    "browserify": "^11.2.0",
    "browserify-shim": "^3.8.10",
    "nodemon": "^1.7.3"
  },
  "browserify-shim": {
    "angular": "global:angular"
  }
}
