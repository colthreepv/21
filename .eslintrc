{
  "eslint": "recommended",
  "env": {
    "node": true
  },
  "ecmaFeatures": {
    "arrowFunctions": true,
    "blockBindings": true,
    "classes": true,
    "templateStrings": true
  },
  "globals": {
    "angular": false
  },
  "rules": {
    "brace-style": [2, "1tbs"],
    "comma-spacing": 2,
    "comma-style": [2, "last"],
    "curly": [2, "multi-line"],
    "default-case": 2,
    "func-style": [2, "declaration"],
    "guard-for-in": 0,
    "indent": [2, 2],
    "key-spacing": 2,
    "new-cap": 1,
    "no-floating-decimal": 2,
    "no-mixed-requires": 0,
    "no-nested-ternary": 2,
    "no-shadow": 0,
    "no-undef": 1,
    "no-underscore-dangle": 0,
    "no-unused-vars": [1, { "vars": "local", "args": "after-used" }],
    "no-use-before-define": [2, "nofunc"],
    "object-curly-spacing": [2, "always"],
    "quotes": [1, "single"],
    "radix": 2,
    "semi": [2, "always"],
    "space-after-keywords": 2,
    "space-before-blocks": 2,
    "space-before-function-paren": 2,
    "space-before-keywords": 2,
    "space-infix-ops": 2,
    "spaced-comment": 2,
    "strict": 0,
    "valid-jsdoc": [0, { "prefer": { "return": "returns"}}],
    "wrap-iife": [2, "any"]
  }
}
